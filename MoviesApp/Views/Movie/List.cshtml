@model List<Movie>

@{
    ViewData["Title"] = "All Movies";
}

<a asp-controller="Movie" asp-action="Add">Add new movie</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Rating</th>
            <th>Genre</th>
            <th>Production Studio</th>
            <th>Status</th>
            <th>Streaming Rights</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Year</td>
                <td>@movie.Rating</td>
                <td>@movie.Genre?.Name</td>
                <td>@movie.ProductionStudio?.Name</td>
                <td>@movie.StreamingRights</td>

                @if(movie.StreamingRights == "Not Streaming")
                {
                    <td>
                        <form method="post" asp-controller="Movie">
                            <button type="submit" asp-route-id="@movie.MovieId" asp-action="RequestRights" >Request Streaming Rights</button>
                        </form>
                       
                        
                    </td>
                }

                else
                {
                    <td></td>
                }
                
                <td>
                    <a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.MovieId">Edit</a>
                    <span class="mx-1">|</span>
                    <a asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.MovieId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
