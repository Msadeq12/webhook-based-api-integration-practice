@model List<MoviesApp.Entities.StreamingPartner>

@{
    ViewData["Title"] = "Our Stream Partners";
    
}

<a class="btn btn-primary" asp-action="AddPartner">Add Partner</a>

<div class="row">

    @if (Model.Count == 0)
    {
        <h3><b>@ViewBag.PartCount</b></h3>
    }

    else
    {
        <table class="table table-bordered table-striped mt-2 pt-2">
            <thead>
                <tr>
                    <th>Partner URL</th>
                    <th>API Key</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var partner in Model)
                {
                    <tr>
                        <td>@partner.Url</td>
                        <td>@partner.ApiKey</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>



